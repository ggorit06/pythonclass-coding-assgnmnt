Num = int(input("\nPlease Enter the Number : "))

Sum = 0
Times = 0
           
Temp = Num
while Temp > 0:
    Times = Times + 1
    Temp = Temp // 10

Temp = Num
for n in range(1, Temp + 1):
    Reminder = Temp % 10
    Sum = Sum + (Reminder ** Times)
    Temp //= 10

if n == sum:
   print(Num,"is an Armstrong number")
else:
   print(Num," It is an invalid entry. Don't use non-numeric, float, or negative values!")
